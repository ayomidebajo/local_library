extends layout

block content
  h1 #{title}: #{bookinstance.title}


  if bookinstance.length
    h4 Books
      dl
      each book in bookinstance
        dt
          a(href=book.url) #{book.title}
        dd #{book.summary}

  else
    p Do you really want to delete this book copy?

    form(method='POST' action='')
      div.form-group
        input#authorid.form-control(type='hidden',name='bookinstanceid', required='true', value=bookinstance._id )

      button.btn.btn-primary(type='submit') Delete